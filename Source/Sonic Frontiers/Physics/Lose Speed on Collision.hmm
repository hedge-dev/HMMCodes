Code "Lose Speed on Collision" in "Physics" by "WasifBoomz" does "Prevents sliding against objects upon collision."
//
    #lib "BlackboardStatus"
    #lib "Sonic"
    #lib "Time"

    #load "System.Numerics.dll"
	
    using System;
    using System.Numerics;

    static Vector3 position = Vector3.Zero;
    static float currentTimeSliding = 0.0f;
//
{
    Sonic.Kinematics kinematics = Sonic.Kinematics.Get();
    if (kinematics == null)
        return;
    
    Vector3 distanceVec = position - *kinematics.Position;
    float distance = (float)Math.Sqrt(distanceVec.X * distanceVec.X + distanceVec.Z * distanceVec.Z) / Time.GetDeltaTime();

    if(Sonic.Kinematics.GetHorizontalMagnitude() > distance * 1.5 && distance < 15.0 && Sonic.Kinematics.GetHorizontalMagnitude() > 15.0 && distance > 0)
    {
        currentTimeSliding += Time.GetDeltaTime();
        if (currentTimeSliding > 0.1f)
        {
            float yVel = kinematics.Velocity->Y;
            *kinematics.Velocity = Vector3.Normalize(*kinematics.Velocity) * distance;
            kinematics.Velocity->Y = yVel;
        }
    }
    else
    {
        currentTimeSliding = 0;
    }

    position = *kinematics.Position;
}